<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="services/command.xml" />
        <import resource="services/controller.xml" />
        <import resource="services/date_system.xml" />
        <import resource="services/event_listner.xml" />
        <import resource="service/repository.xml" />
    </imports>

    <services>
        <service id="mld_visits_tracker" class="MLD\SessionVisitsBundle\Component\VisitsTracker\VisitsTracker">
            <argument key="$sessionRegister" type="service" id="mld_session_register" />
            <argument key="$visitsSaveResolver" type="service" id="mld_visits_save_resolver" />
        </service>

        <service id="mld_visits_save_resolver" class="MLD\SessionVisitsBundle\Component\VisitsTracker\Resolver\VisitsSaveResolver">
            <argument key="$visitsRepository" type="service" id="mld_visits_repository" />
            <argument key="$visitsFactory" type="service" id="mld_visits_factory" />
            <argument key="$visitsUpdater" type="service" id="mld_visits_updater" />
            <argument key="$visitsPersister" type="service" id="mld_visits_persister" />
            <argument key="$currentDateFactory" type="service" id="mld_current_date_factory" />
        </service>

        <service id="mld_session_register" class="MLD\SessionVisitsBundle\Component\VisitsTracker\Session\SessionRegister">
            <argument key="$requestStack" type="service" id="request_stack" />
        </service>

        <service id="mld_visits_persister" class="MLD\SessionVisitsBundle\Component\VisitsTracker\Persister\VisitsPersister">
            <argument key="$manager" type="service" id="doctrine.orm.default_entity_manager" />
        </service>

        <service id="mld_visits_factory" class="MLD\SessionVisitsBundle\Component\VisitsTracker\Factory\VisitsFactory" />

        <service id="MLD\SessionVisitsBundle\Component\VisitsTracker\VisitsTracker" alias="mld_visits_tracker" />
        <service id="MLD\SessionVisitsBundle\Component\VisitsTracker\Session\SessionRegister" alias="mld_session_register" />
        <service id="MLD\SessionVisitsBundle\Component\VisitsTracker\Resolver\VisitsSaveResolver" alias="mld_visits_save_resolver" />
        <service id="MLD\SessionVisitsBundle\Component\VisitsTracker\Factory\VisitsFactory" alias="mld_visits_factory" />
        <service id="MLD\SessionVisitsBundle\Component\VisitsTracker\Persister\VisitsPersister" alias="mld_visits_persister" />
    </services>
</container>